{
  "name": "playwright-typescript-framework",
  "version": "1.0.0",
  "description": "Playwright TypeScript Web Automation Framework with Allure Reporting",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:dev": "cross-env NODE_ENV=development npx playwright test",
    "test:preprod": "cross-env NODE_ENV=preprod npx playwright test",
    "test:prod": "cross-env NODE_ENV=production npx playwright test",
    "test:lambdatest": "npx playwright test",
    "test:browserstack": "npx browserstack-node-sdk playwright test",
    "test:browserstack:critical": "npx browserstack-node-sdk playwright test --grep=\"@critical\"",
    "test:browserstack:smoke": "npx browserstack-node-sdk playwright test --grep=\"@smoke\"",
    "test:browserstack:both": "node scripts/run-browserstack-multi-tags.js \"@critical|@smoke\"",
    "test:browserstack:tags": "powershell -ExecutionPolicy Bypass -File ./scripts/run-browserstack-tags.ps1",
    "test:lambdatest:critical": "npx playwright test --grep \"@critical\"",
    "test:lambdatest:smoke": "npx playwright test --grep \"@smoke\"",
    "test:lambdatest:tags": "npx playwright test --grep \"@critical|@smoke\"",
    "test:azure": "npx playwright test --config=playwright.azure.config.ts --workers=20",
    "test:azure:smoke": "npx playwright test --config=playwright.azure.config.ts --grep \"@smoke\" --workers=20",
    "test:azure:critical": "npx playwright test --config=playwright.azure.config.ts --grep \"@critical\" --workers=20",
    "test:azure:tags": "npx playwright test --config=playwright.azure.config.ts --grep \"@smoke|@critical\" --workers=20",
    "test:azure:chromium": "npx playwright test --config=playwright.azure.config.ts --project=chromium --workers=20",
    "test:azure:firefox": "npx playwright test --config=playwright.azure.config.ts --project=firefox --workers=20",
    "test:azure:webkit": "npx playwright test --config=playwright.azure.config.ts --project=webkit --workers=20",
    "test:azure:10workers": "npx playwright test --config=playwright.azure.config.ts --workers=10",
    "test:azure:50workers": "npx playwright test --config=playwright.azure.config.ts --workers=50",
    "test:azure:service": "npx playwright test --config=playwright.service.config.ts",
    "test:azure:service:10workers": "npx playwright test --config=playwright.service.config.ts --workers=10",
    "test:local": "npx playwright test",
    "switch-env": "node scripts/switch-env.js",
    "report": "npx allure serve allure-results",
    "report:generate": "node scripts/generate-report.js",
    "report:open": "npx allure open allure-report",
    "test:critical": "cross-env NODE_ENV=preprod npx playwright test --grep \"@critical\" && npx allure generate allure-results --clean && npx allure open",
    "install:browsers": "npx playwright install",
    "diagnose:jenkins": "node scripts/diagnose-jenkins.js",
    "diagnose:browser": "node scripts/jenkins-diagnostic.js",
    "test:outlook-email": "node scripts/test-outlook-email.js",
    "azure:token": "node scripts/get-azure-token.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "allure"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/playwright": "^1.0.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.9.0",
    "browserstack-node-sdk": "^1.45.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "nodemailer": "^7.0.6"
  }
}
