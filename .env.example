# Azure Playwright Testing Configuration
# Copy this file to .env and update with your Azure credentials

# Azure Playwright Testing Service URL
# Format: https://<region>.api.playwright.microsoft.com
# Available regions: eastus, westus, westeurope, uksouth, australiaeast
# Example: wss://eastus.api.playwright.microsoft.com/playwrightworkspaces/<your-workspace-id>/browsers
PLAYWRIGHT_SERVICE_URL=

# LambdaTest Credentials
LAMBDA_USER=your_lambdatest_username
LAMBDA_KEY=your_lambdatest_access_key

# Email Configuration
EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
# For Gmail, use an App Password (https://myaccount.google.com/apppasswords)
SMTP_PASS="your_app_password"
EMAIL_TO_DEV=recipient@example.com

# BrowserStack Credentials
BROWSERSTACK_USER=your_browserstack_username
BROWSERSTACK_KEY=your_browserstack_access_key
